@*首頁圖片跳換css*@
    <script src="http://malsup.github.com/jquery.cycle.all.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.slideshow').cycle();

            $('.zoom').cycle({
                fx: 'zoom',
                sync: false,
                delay: -200
            });
        });
    </script>
</body>
</html>
