@model 戀戀台三線網站.Models.Contact_us


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
    <div class="col-sm-4">
        <img data-no-retina="true" src="~/Image/LOGO-黑.png" width="400" height="100">
    </div>
    <div class="col-sm-8">
        <h3>
            <b>聯絡方法</b>
        </h3>

        <p class="contact-info">
            <strong>E-mail:</strong>
            <a href="mailto:mentha5681@gmail.com">mentha5681@gmail.com</a>
        </p>
    </div>
        </div><br/>
        <hr style="margin-bottom:5px !important; margin-top:5px !important; border: 0; height: 2px; background: #333;background-image: linear-gradient(to right, #ccc, #333, #ccc); ">

    <div class="row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-sm-12">
            姓名or綽號：
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control UserName" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12">
            Email：
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control UserMail" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12">
            手機號碼：
            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control UserPhone" } })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-sm-12">
        留言內容：
            </div>
        <div class="col-sm-12">
        @Html.TextAreaFor(model => model.UserComments, new { @cols = "100", rows = "10" })
        </div>
        @Html.ValidationMessageFor(model => model.UserComments, "", new { @class = "text-danger Usercomments" })
        </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="submit" type="submit" value="送出" class="btn btn-default" />
        </div>
    </div>
}
