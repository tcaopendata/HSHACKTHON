<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title 戀戀台山線，暢遊全台灣mobile</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-103416000-1', 'auto');
        ga('send', 'pageview');
    </script>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/IMG/LOGO-白.png" width="50%" height=".5%">
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("首頁", "Index", "Home")</li>
                    <li>@Html.ActionLink("景點介紹", "Attractions", "Home")</li>
                    <li>@Html.ActionLink("地圖 & 班次", "Transportation", "Home")</li>
                    <li>@Html.ActionLink("聯絡我們", "Create", "Contact_us")</li>
                    <li>@Html.ActionLink("留言板", "index", "MessageBoard")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year 交通部公路總局公共運輸規劃競賽-戀戀臺3線推廣網</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="http://malsup.github.com/jquery.cycle.all.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.slideshow').cycle();

            $('.zoom').cycle({
                fx: 'zoom',
                sync: false,
                delay: -200
            });
        
    </script>
</body >
</html >
